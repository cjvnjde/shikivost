{
  "name": "shikivost",
  "short_name": "SV",
  "version": "0.0.1",
  "manifest_version": 3,
  "description": "Shikimori integration on the animevost site",
  "icons": {
    "48": "./icons/icon-48.png",
    "96": "./icons/icon-96.png"
  },
  "action": {
    "default_icon": "./icons/icon-48.png",
    "default_title": "Shikivost",
    "default_popup": "./popup/index.html"
  },
  "background": {
    "scripts": ["background/index.js"]
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["*://animevost.org/*", "*://v2.vost.pw/*"],
      "js": ["content/index.js"],
      "run_at": "document_end"
    }
  ]
}
