{
  "name": "@shikivost/source",
  "version": "0.0.8",
  "description": "Effortlessly sync your Animevost.org progress with Shikimori.one using Shikivost",
  "license": "MIT",
  "scripts": {
    "build:extension:static": "nx run static:build --skip-nx-cache",
    "build:extension:static:chrome": "nx run static:build_chrome --skip-nx-cache",
    "build:extension:content": "nx run content:build --skip-nx-cache",
    "watch:extension:content": "nx run content:watch --skip-nx-cache",
    "build:extension:background": "nx run background:build --skip-nx-cache",
    "watch:extension:background": "nx run background:watch --skip-nx-cache",
    "start:extension:firefox": "web-ext run -t firefox-desktop --source-dir ./dist/extension --start-url=https://animevost.org/ --keep-profile-changes",
    "serve:extension:firefox": "pnpm run build && concurrently --kill-others 'pnpm run watch:extension:content' 'pnpm run watch:extension:background' 'pnpm run start:extension:firefox'",
    "bundle": "web-ext build -s ./dist/extension -a ./dist --overwrite-dest",
    "build": "pnpm run build:extension:content && pnpm run build:extension:background",
    "build:chrome": "pnpm run build && pnpm run build:extension:static:chrome",
    "build:libs:bridge": "nx run bridge:build --skip-nx-cache",
    "format:all": "prettier . --write"
  },
  "private": true,
  "devDependencies": {
    "@nx/workspace": "20.5.0",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-html": "^2.0.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/qs": "^6.9.18",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/webextension-polyfill": "^0.12.3",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "cssnano": "^7.0.6",
    "nx": "20.5.0",
    "postcss": "^8.5.3",
    "postcss-import": "^16.1.0",
    "postcss-nested": "^7.0.2",
    "prettier": "^3.5.3",
    "prettier-plugin-css-order": "^2.1.2",
    "rollup": "^4.35.0",
    "rollup-plugin-postcss": "^4.0.2",
    "typescript": "~5.8.2",
    "web-ext": "^8.4.0"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.0",
    "@tabler/icons-react": "^3.31.0",
    "clsx": "^2.1.1",
    "jotai": "^2.12.1",
    "nanoid": "^5.1.3",
    "qs": "^6.14.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tslib": "^2.8.1",
    "webextension-polyfill": "^0.12.0"
  }
}
