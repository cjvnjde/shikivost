{
  "name": "@shikivost/source",
  "version": "0.0.4",
  "description": "Effortlessly sync your Animevost.org progress with Shikimori.one using Shikivost. No more manual updates â€“ just install, connect, and enjoy uninterrupted anime watching!",
  "license": "MIT",
  "scripts": {
    "build:extension:static": "nx run static:build --skip-nx-cache",
    "build:extension:content": "nx run content:build --skip-nx-cache",
    "watch:extension:content": "nx run content:watch --skip-nx-cache",
    "build:extension:background": "nx run background:build --skip-nx-cache",
    "watch:extension:background": "nx run background:watch --skip-nx-cache",
    "start:extension:firefox": "web-ext run -t firefox-desktop --source-dir ./dist/extension --start-url=https://v2.vost.pw/ --keep-profile-changes",
    "serve:extension:firefox": "pnpm run build && concurrently --kill-others 'pnpm run watch:extension:content' 'pnpm run watch:extension:background' 'pnpm run start:extension:firefox'",
    "bundle": "web-ext build -s ./dist/extension -a ./dist --overwrite-dest",
    "build": "pnpm run build:extension:content && pnpm run build:extension:background",
    "build:libs:bridge": "nx run bridge:build --skip-nx-cache"
  },
  "private": true,
  "devDependencies": {
    "@nx/workspace": "17.2.8",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-html": "^1.0.3",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.5",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/qs": "^6.9.11",
    "@types/webextension-polyfill": "^0.10.7",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "cssnano": "^6.0.3",
    "nx": "17.2.8",
    "postcss": "^8.4.33",
    "postcss-import": "^16.0.0",
    "postcss-nested": "^6.0.1",
    "prettier": "^2.6.2",
    "rollup": "^4.9.5",
    "rollup-plugin-postcss": "^4.0.2",
    "typescript": "~5.2.2",
    "web-ext": "^7.10.0"
  },
  "dependencies": {
    "@preact/signals": "^1.2.2",
    "nanoid": "^5.0.4",
    "preact": "^10.19.3",
    "qs": "^6.11.2",
    "tslib": "^2.6.2",
    "webextension-polyfill": "^0.10.0"
  }
}
